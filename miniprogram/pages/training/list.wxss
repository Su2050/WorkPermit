/**
 * 培训列表页面样式
 */
.ticket-card {
  margin-bottom: 24rpx;
}

.ticket-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: block;
}

.ticket-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.ticket-item {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.ticket-progress {
  padding-top: 16rpx;
  border-top: 2rpx solid var(--border-color);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.section {
  margin-top: 8rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.video-card {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
}

.video-card.completed {
  opacity: 0.7;
}

.video-thumb {
  position: relative;
  width: 200rpx;
  height: 140rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.video-thumb image {
  width: 100%;
  height: 100%;
}

.video-duration {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: white;
}

.video-completed {
  position: absolute;
  inset: 0;
  background: rgba(46, 160, 67, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.completed-icon {
  font-size: 48rpx;
  color: white;
}

.video-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.video-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.video-desc {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.video-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.progress-bar.small {
  flex: 1;
  height: 6rpx;
}

.video-status {
  margin-top: auto;
}

