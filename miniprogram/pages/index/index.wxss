/**
 * 首页样式
 */
.page {
  min-height: 100vh;
}

/* 未登录状态 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 64rpx;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-muted);
}

/* 欢迎卡片 */
.welcome-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  padding: 40rpx 32rpx;
}

.welcome-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

.welcome-date {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.welcome-avatar {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

/* 统计行 */
.stats-row {
  display: flex;
  background: var(--bg-card);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  border-right: 2rpx solid var(--border-color);
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}

/* 区块 */
.section {
  margin-top: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 任务卡片 */
.task-card {
  margin-bottom: 24rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.task-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-right: 16rpx;
}

.task-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.task-contractor {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.task-deadline {
  font-size: 24rpx;
  color: var(--text-muted);
}

.task-progress {
  margin-bottom: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.progress-text {
  color: var(--accent-color);
}

.task-action {
  display: flex;
  justify-content: flex-end;
}

.btn-sm {
  height: 64rpx;
  padding: 0 32rpx;
  font-size: 26rpx;
}

